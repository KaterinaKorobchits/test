<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="materialButtonStyle">@style/AppTheme.MaterialButton</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/holo_orange_light</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@android:color/holo_orange_light</item>
    </style>

    <style name="DateTimePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/DateTimePickerDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DateTimePickerDialogButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DateTimePickerDialogButton</item>
        <item name="colorAccent">#ff6d00</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#d50000</item>
    </style>

    <style name="DateTimePickerDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">#ff6d00</item>
    </style>

    <style name="ProgressDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">#540788</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
